<% layout("/layouts/boilerplate.ejs") -%>
<div class="row" style="margin-top: 70px;">
  <div class="col-8">
    
    <h1 style="text-align: center;">Login</h1>
    <form action="/login" method="POST" novalidate class="needs-validation" >
      <div class="mb-3 col">
      <label for="username" class="form-label"> Username
      </label>
      <input id="username" name="username" class="form-control" type="text" />
      </div>
      <!-- <div class="mb-3 col">
        <label for="email" class="form-label"> Username
        </label>
        <input id="email" name="email" class="form-control" type="email" required/>
        </div> -->
      <div class="mb-3">
      <label for="password" class="form-label"> Password
      </label>
      <input id="password" name="password" class="form-control" type="text"  required/>
      </div>
      <button type="submit" class="btn btn-success" style="display:block; margin: 40px auto" >Login</button>
    </form>
  </div>
</div>