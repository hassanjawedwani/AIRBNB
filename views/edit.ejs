<% layout('./layouts/boilerplate.ejs') -%>
<h1>Edit</h1>
<div class="row" style="margin: 40px auto">
  <div class="col-8">
<form action="/listings/<%=list._id%>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
  <label for="title" class="form-label"> Enter title:</label>
  <input class="form-control" id="title" name="title" value=<%=list.title%> type="text" required/>
  <label class="form-label" for="description"> Enter description:
  </label>
  <input class="form-control" id="description" name="description" value=<%=list.description%> type="text" required/>
  
  <label class="form-label" for="last-image"> Last uploaded image:
  <div id="last-image"><img src=<%=previewImage%> alt="image"/></div>
  
  <label class="form-label" for="image"> Upload Image:
  </label>
  <input class="form-control" id="image" name="image" value=<%=list.image%> type="file" />
  <label class="form-label" for="price"> Enter price:
  </label>
  <input class="form-control" id="price" name="price"  value=<%=list.price%> type="number" required/>
  <label class="form-label" for="location"> Enter location:
  </label>
  <input class="form-control" id="location" name="location" value=<%=list.location%> type="text" required/>
  <label class="form-label" for="country"> Enter country:
  </label>
  <input class="form-control" id="country" name="country" value=<%=list.country%> type="text" required/>
  <button type="submit" class="btn btn-danger"  style="display:block; margin: 40px auto">Update</button>
</form>
</div>
</div>